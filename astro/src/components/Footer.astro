<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: var(--footer-bg);
		color: var(--footer-text);
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: var(--footer-text);
	}
	.social-links a:hover {
		color: var(--footer-secondary);
	}
</style>
<script>
	const svg = `<svg fill="currentColor" clip-rule="evenodd" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m6 19v2c0 .621.52 1 1 1h2v-1.5h-1.5v-1.5zm7.5 3h-3.5v-1.5h3.5zm4.5 0h-3.5v-1.5h3.5zm4-3h-1.5v1.5h-1.5v1.5h2c.478 0 1-.379 1-1zm-1.5-1v-3.363h1.5v3.363zm0-4.363v-3.637h1.5v3.637zm-13-3.637v3.637h-1.5v-3.637zm11.5-4v1.5h1.5v1.5h1.5v-2c0-.478-.379-1-1-1zm-10 0h-2c-.62 0-1 .519-1 1v2h1.5v-1.5h1.5zm4.5 1.5h-3.5v-1.5h3.5zm3-1.5v-2.5h-13v13h2.5v-1.863h1.5v3.363h-4.5c-.48 0-1-.379-1-1v-14c0-.481.38-1 1-1h14c.621 0 1 .522 1 1v4.5h-3.5v-1.5z" fill-rule="nonzero"/></svg>`;
	document.addEventListener("DOMContentLoaded", () => {
		if (navigator.clipboard) {
			const clipboardCodeEls = document.querySelectorAll(
				"code[data-clip]",
			) as NodeListOf<HTMLElement>;
			clipboardCodeEls.forEach((el) => {
				const whatToCopy = el.dataset?.clip;
				if (!whatToCopy) {
					console.warn("Element has empty data-clip", el);
					return;
				}
				const clipboardButton = document.createElement("button");
				clipboardButton.classList.add("copy-to-clipboard");
				clipboardButton.addEventListener("click", (e) => {
					e.preventDefault();
					navigator.clipboard.writeText(whatToCopy);
				});
				clipboardButton.innerHTML = svg;
				clipboardButton.title = `Copy to clipboard: "${whatToCopy}"`;
				el.insertAdjacentElement("afterend", clipboardButton);
			});
		}
	});
</script>
